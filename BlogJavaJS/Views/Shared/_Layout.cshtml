<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NightFury Blog</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            background: url('/images/main.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #000;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(255, 255, 255, 0.35);
            z-index: -1;
        }

        header, footer {
            background-color: rgba(248, 249, 250, 0.9);
            padding: 15px 0;
            backdrop-filter: blur(6px);
        }

        /* 🔥 LOGO mới: quyetthang.jpg */
        .navbar-brand img {
            height: 55px;
            width: 55px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            transition: transform .25s ease, box-shadow .25s ease;
        }

        .navbar-brand img:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0,0,0,0.4);
        }

        .nav-link {
            color: #000 !important;
            text-transform: uppercase;
            margin: 0 12px;
            font-weight: 600;
            position: relative;
            transition: color 0.2s ease;
        }

        .nav-link:hover {
            color: #0d6efd !important;
        }

        .nav-link::after {
            content: "";
            display: block;
            width: 0;
            height: 2px;
            background: #0d6efd;
            transition: width 0.3s;
            position: absolute;
            bottom: -4px;
            left: 0;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        .search-container input {
            background-color: #fff;
            border: 1px solid #ccc;
            color: #000;
        }

        .social-icons i {
            color: #000;
            font-size: 18px;
            transition: color .2s ease;
        }

        .social-icons i:hover {
            color: #0d6efd;
        }

        footer {
            text-align: center;
            font-size: 14px;
            color: #666;
            border-top: 1px solid #ddd;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <!-- 🟢 LOGO: quyetthang.jpg -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/quyetthang.jpg" alt="Quyet Thang" />
                </a>
            </div>

            <nav class="d-flex align-items-center">
                <a class="nav-link" asp-controller="Posts" asp-action="Index">Blog</a>
                <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                <a class="nav-link" asp-controller="Home" asp-action="Profile">Profile</a>
                <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
            </nav>

            <div class="d-flex align-items-center">
                <div class="input-group search-container me-3">
                    <span class="input-group-text bg-transparent border-0 text-dark">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control form-control-sm" placeholder="Search..." />
                </div>
                <div class="social-icons d-flex gap-2">
                    <a href="https://facebook.com" target="_blank"><i class="bi bi-facebook"></i></a>
                    <a href="https://instagram.com" target="_blank"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            © @DateTime.Now.Year - NightFury Blog. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
