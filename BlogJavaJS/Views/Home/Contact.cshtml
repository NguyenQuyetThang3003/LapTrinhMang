@model BlogJavaJS.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<div class="contact-section d-flex align-items-center justify-content-center">
    <div class="overlay"></div>

    <div class="contact-box bg-white p-5 shadow">
        <h1 class="text-center mb-4 fw-bold">CONTACT</h1>
        <p class="text-center mb-5 text-uppercase">
            FOR INQUIRIES AND COLLABORATIONS, REACH ME HERE
        </p>

        <form asp-action="Contact" method="post" class="row g-4">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label fw-semibold">First Name *</label>
                <input asp-for="FirstName" class="form-control border-dark rounded-0" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label fw-semibold">Last Name *</label>
                <input asp-for="LastName" class="form-control border-dark rounded-0" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Email" class="form-label fw-semibold">Email *</label>
                <input asp-for="Email" class="form-control border-dark rounded-0" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Phone" class="form-label fw-semibold">Phone</label>
                <input asp-for="Phone" class="form-control border-dark rounded-0" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <label asp-for="Message" class="form-label fw-semibold">Leave us a message</label>
                <textarea asp-for="Message" class="form-control border-dark rounded-0" rows="5"></textarea>
                <span asp-validation-for="Message" class="text-danger small"></span>
            </div>
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-dark rounded-0 px-5 py-2">Submit</button>
            </div>
        </form>
    </div>
</div>

