@model BlogJavaJS.Models.Post
@{
    ViewData["Title"] = "Delete Post";
}

<div class="container mt-4">
    <h2>Xóa bài viết</h2>
    <h4 class="text-danger">Bạn chắc chắn muốn xóa bài này?</h4>

    <div class="card mt-3">
        <div class="card-body">
            <h5>@Model.Title</h5>
            <p>@Model.Content</p>
            <small class="text-muted">@Model.CreatedAt.ToLocalTime()</small>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>
