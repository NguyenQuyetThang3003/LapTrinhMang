@model IEnumerable<BlogJavaJS.Models.Post>
@{
    ViewData["Title"] = "THE BLOG";
}

<style>
    :root {
        --border-dark: rgba(0, 0, 0, 0.6);
        --border-light: rgba(255, 255, 255, 0.2);
        --card-bg: rgba(255, 255, 255, 0.93);
        --hover-shadow: rgba(0, 0, 0, 0.35);
        --accent: #6366f1;
    }

    /* üåå Background Toothless */
    body {
        background: url('/images/main.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    /* üî• Animation nh·∫π khi load */
    @@keyframes fadeUp {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .blog-wrap {
        border-top: 1px solid var(--border-dark);
        border-bottom: 1px solid var(--border-dark);
        padding: 32px 0;
    }

    /* üé¥ Blog Card */
    .blog-card {
        border: 1px solid var(--border-light);
        border-radius: 14px;
        background: var(--card-bg);
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        transition: transform .25s ease, box-shadow .25s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow: hidden;
        animation: fadeUp 0.4s ease both;
    }

    .blog-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 15px 30px var(--hover-shadow);
        border-color: var(--accent);
    }

    /* üñºÔ∏è ·∫¢nh b√†i vi·∫øt */
    .ratio-3x4 {
        aspect-ratio: 16 / 9;
        overflow: hidden;
        border-radius: 14px 14px 0 0;
        position: relative;
    }

    .ratio-3x4 img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform .3s ease, filter .3s ease;
    }

    .ratio-3x4:hover img {
        transform: scale(1.05);
        filter: brightness(1.05);
    }

    /* üì∞ Ti√™u ƒë·ªÅ & m√¥ t·∫£ */
    .blog-meta {
        font-size: .9rem;
        color: #666;
        margin-bottom: 4px;
    }

    .blog-title {
        font-family: Georgia, "Times New Roman", serif;
        font-weight: bold;
        font-size: 1.05rem;
        text-transform: uppercase;
        color: #111;
        margin: 0 0 0.35rem;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .blog-sub {
        color: #444;
        font-size: .95rem;
        overflow-wrap: break-word;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: .5rem;
    }

    .blog-divider {
        border: 0;
        border-top: 1px solid var(--border-light);
        margin: 1rem 0;
    }

    .blog-card .btn {
        font-size: .8rem;
        padding: .25rem .65rem;
    }

    /* üì± Responsive grid */
    .grid-sep {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 24px;
    }

    .blog-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
    }

    .blog-meta i {
        color: #666;
    }

    .tag-badge {
        background: linear-gradient(45deg, #6366f1, #06b6d4);
        color: #fff;
        padding: 3px 10px;
        border-radius: 999px;
        font-size: .8rem;
        font-weight: 600;
    }

    .add-post-btn {
        background: linear-gradient(45deg, #6366f1, #06b6d4);
        border: none;
        color: #fff;
        font-weight: 600;
        transition: transform .2s ease, box-shadow .2s ease;
    }

    .add-post-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 14px rgba(0,0,0,0.25);
    }
</style>

<div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="m-0 flex-grow-1 text-center text-light" style="font-family: Georgia, 'Times New Roman', serif; text-shadow: 0 2px 6px rgba(0,0,0,0.5);">
            THE BLOG
        </h2>
        <a class="btn add-post-btn ms-3" asp-controller="Posts" asp-action="Create">+ B√†i vi·∫øt m·ªõi</a>
    </div>

    <div class="blog-wrap">
        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0">Ch∆∞a c√≥ b√†i vi·∫øt n√†o.</div>
        }
        else
        {
            <div class="grid-sep">
                @foreach (var p in Model)
                {
                    <div class="blog-card">
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id" class="ratio-3x4">
                            @{
                                var thumb = p.Images?.FirstOrDefault()?.ImageUrl ?? p.ImageUrl;
                            }
                            @if (!string.IsNullOrWhiteSpace(thumb))
                            {
                                <img src="@thumb" alt="@p.Title" loading="lazy" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light text-muted obj-cover">No image</div>
                            }
                        </a>

                        <div class="p-3 d-flex flex-column flex-grow-1">
                            <div class="blog-meta mb-1">
                                <i class="bi bi-person-circle"></i> Admin ¬∑ @p.CreatedAt.ToString("MMM dd, yyyy")
                            </div>
                            <h5 class="blog-title">
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id"
                                   class="text-decoration-none text-dark">@p.Title</a>
                            </h5>
                            <p class="blog-sub">@p.Content</p>

                            <hr class="blog-divider" />

                            <div class="blog-actions">
                                <div class="text-muted small">
                                    <i class="bi bi-eye"></i> @p.Views
                                </div>
                                @if (!string.IsNullOrWhiteSpace(p.Tag))
                                {
                                    <span class="tag-badge">@p.Tag</span>
                                }
                            </div>

                            <div class="mt-2 d-flex gap-1 justify-content-end">
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">S·ª≠a</a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger btn-sm">X√≥a</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Ph√¢n trang (demo) -->
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><span class="page-link">&laquo;</span></li>
            <li class="page-item active"><span class="page-link">1</span></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </nav>
</div>
