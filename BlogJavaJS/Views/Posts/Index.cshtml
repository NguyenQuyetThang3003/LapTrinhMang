@model IEnumerable<BlogJavaJS.Models.Post>
@{
    ViewData["Title"] = "THE BLOG";
}

<style>
    :root { --border-dark: #000; --border-light: #ddd; }

    /* üî• background ·∫£nh */
    body {
        background: url('/images/main.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .blog-wrap {
        border-top: 1px solid var(--border-dark);
        border-bottom: 1px solid var(--border-dark);
        padding: 24px 0;
    }

    .blog-card {
        border: 1px solid var(--border-light);
        border-radius: 12px;
        transition: transform .15s ease, box-shadow .15s ease;
        background: rgba(255,255,255,0.95); /* n·ªÅn tr·∫Øng m·ªù ƒë·ªÉ n·ªïi tr√™n ·∫£nh */
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .blog-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,.1);
    }

    .ratio-3x4 { aspect-ratio: 3/4; overflow:hidden; border-radius:12px 12px 0 0; }
    .obj-cover { width:100%; height:100%; object-fit:cover; }

    .blog-title {
        font-family: Georgia, "Times New Roman", serif;
        text-transform: uppercase;
        letter-spacing:.5px;
        line-height:1.3;
        margin:.25rem 0 .5rem;
    }

    .blog-meta { font-size:.85rem; color:#666; margin-bottom:6px; }

    .blog-sub {
        color:#444;
        font-size:.95rem;
        overflow-wrap: break-word;
        display:-webkit-box;
        -webkit-line-clamp:5;
        -webkit-box-orient: vertical;
        overflow:hidden;
    }

    .blog-divider {
        border:0;
        border-top:1px solid var(--border-light);
        margin:1rem 0;
    }

    @@media (min-width: 992px) {
        .grid-sep > [class*='col-lg-3'] { position: relative; }
        .grid-sep > [class*='col-lg-3']::before {
            content:"";
            position:absolute;
            top:-24px; bottom:-24px;
            left:-12px;
            width:1px;
            background:var(--border-dark);
        }
        .grid-sep > [class*='col-lg-3']:first-child::before { display:none; }
    }

    .blog-card .btn {
        font-size:.8rem;
        padding:.25rem .5rem;
    }
</style>

<div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="m-0 flex-grow-1 text-center" style="font-family: Georgia, 'Times New Roman', serif;">THE BLOG</h2>
        <a class="btn btn-dark ms-3" asp-controller="Posts" asp-action="Create">+ B√†i vi·∫øt m·ªõi</a>
    </div>

    <div class="blog-wrap">
        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0">Ch∆∞a c√≥ b√†i vi·∫øt n√†o.</div>
        }
        else
        {
            <div class="row g-4 grid-sep">
                @foreach (var p in Model)
                {
                    <div class="col-12 col-md-6 col-lg-3 d-flex">
                        <div class="blog-card flex-fill d-flex flex-column">
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id" class="ratio-3x4 d-block">
                                @{
                                    var thumb = p.Images?.FirstOrDefault()?.ImageUrl ?? p.ImageUrl;
                                }
                                @if (!string.IsNullOrWhiteSpace(thumb))
                                {
                                    <img src="@thumb" alt="@p.Title" class="obj-cover" loading="lazy" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light obj-cover">
                                        <span class="text-muted">No image</span>
                                    </div>
                                }
                            </a>

                            <div class="p-3 d-flex flex-column flex-grow-1">
                                <div class="blog-meta mb-1">Admin ¬∑ @p.CreatedAt.ToString("MMM dd, yyyy")</div>
                                <h5 class="blog-title">
                                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id"
                                       class="text-decoration-none text-dark">@p.Title</a>
                                </h5>
                                <p class="blog-sub mb-0">@p.Content</p>

                                <hr class="blog-divider" />

                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <div class="text-muted small">
                                        <i class="bi bi-eye"></i> @p.Views
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(p.Tag))
                                    {
                                        <span class="badge bg-secondary">@p.Tag</span>
                                    }
                                </div>

                                <div class="mt-2 d-flex gap-1">
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-primary">S·ª≠a</a>
                                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger">X√≥a</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Ph√¢n trang demo -->
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><span class="page-link">&laquo;</span></li>
            <li class="page-item active"><span class="page-link">1</span></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </nav>
</div>
